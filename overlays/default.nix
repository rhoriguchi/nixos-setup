        super.fetchFromGitHub {
          owner = "NixOS";
          repo = "nixpkgs";
          rev = "0dff4975e883f6e18d0e8adf4eab295c33200c0a";
          sha256 = "sha256-bRaTBORcCcu3gpEEGJgLawmuk/hXG0nzfOD2glRaiY4=";
